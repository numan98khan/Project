<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cargo"
        android:layout_marginTop="50dp"
        android:id="@+id/cargo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textStyle="bold"
        android:layout_below="@id/cargo"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:id="@+id/welcome"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:id="@+id/layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargo"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="35sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="35sp"/>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableEnd="@drawable/ic_email_black_24dp"
        android:id="@+id/et_email_address"
        android:textColorHint="#999999"
        android:gravity="start"
        android:padding="10dp"
        android:layout_below="@id/layout"
        android:background="@drawable/design"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:drawableRight="@drawable/ic_email_black_24dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:id="@+id/et_password"
        android:textColorHint="#999999"
        android:drawableEnd="@drawable/ic_remove_red"
        android:gravity="start"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_below="@id/et_email_address"
        android:background="@drawable/design"
        android:layout_marginTop="15dp"
        android:textColor="@color/text"
        android:textSize="25sp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:drawableRight="@drawable/ic_remove_red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget password"
        android:layout_marginTop="10sp"
        android:gravity="end"
        android:id="@+id/forgot_password"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/grey"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/et_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="match_parent"
        android:text="Login"
        android:layout_below="@id/forgot_password"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:id="@+id/btn_login"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginLeft="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout2"
        android:layout_below="@id/btn_login"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="Not a member ?"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="2sp"
            android:layout_marginTop="10sp"
            android:text="Sign-up-here."
            android:id="@+id/sign_up"
            android:textStyle="bold"
            android:textColor="@color/bbb"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="2sp"
            android:layout_marginTop="10sp"
            android:text="its free!"
            android:id="@+id/free"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:src="@drawable/facebook"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/google"
            android:layout_marginStart="25dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/twitter"
            android:layout_marginStart="25dp" />

    </LinearLayout>


</RelativeLayout>